<div class="container" id="main">
  <div id="wrapper">
  <div class="container" id="background">

<div class="header">
  
  <img src="/assets/img/burger-200.jpg" class="float-right">
  <h2 class="display-1">Order A Burger</h2>
</div>


<div class="content">
  <div class="row">
    <div class="col py-4">
    <div class="text-center">
    
    <h3>Place an order for your burger now.</h3>
    </div>
    </div>
  </div>

    <div class="row">  
    
    <div class="col">
      
    </div>
    <div class="col-5">
      
  <form  class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour"></label><br>
    <input type="hidden" id="devour" name="devoured" value="0">
    <button type="submit" class="text-center">Place Order</button>  
  </div>  
  </form>

    </div>
    <div class="col">
      
    </div>
  </div>
  <div class="row">
    <ul>
    {{#each burgers}}
     {{#unless this.devoured}}
     <div class="col-xs-9 text-center">
      <li> {{this.id}}. {{this.burger_name}}<br/>
     </div>
     <div class="col-xs-3 text text-center">
       <form class="nothing">
         <input type="hidden" name="burger_id" type="text" value={{this.id}}>
         <button class="testNew btn btn-secondary btn-sm" data-id="{{id}}">Devour Now!</button>
       </form>
       </li>
       {{/unless}}
       {{/each}}
       </ul>
</div>
       <ul>
         {{#each burgers}}
         {{#if this.devoured }}
         <li> {{this.id}}. {{this.burger_name}}</li>
         {{/if}}
         {{/each}}
       </ul>
     
 


  </div>
   </div>
  </div>

  </div>
</div>
</div>

