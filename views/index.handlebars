<div class="container" id="main">
  <div id="wrapper">
  <div class="container" id="background">

<div class="header">
  
  <img src="/assets/img/burger-200.jpg" class="float-right">
  <h2 class="display-1">Order A Burger</h2>
</div>


<div class="content">
  <div class="row">
    <div class="col py-4">
    <div class="text-center">
    
    <h3>Place an order for your burger below.</h3>
    </div>
    </div>
  </div>

   <div class="row">  
    <div class="col-2">
    </div>
    <div class="col-8">
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
          <label for="devour"></label>
      <input type="hidden" id="devour" name="devoured" value="0">
      <button type="submit" class="text-center">Order Burger</button>  
        </div>
    </div>
    <div class="col-2">
 
      </div>
  </form>    
    <div class="col">
      
    </div>
  </div>
  <div class="row">
    <div class="col-1">      
    </div>
    
    <div class="col-4">
    <ul>
    {{#each burgers}}
     {{#unless this.devoured}}
     <div class="col-xs-9">
      <li> {{this.id}}. {{this.burger_name}}

       <form class="nothing">
         <input type="hidden" name="burger_id" type="text" value={{this.id}}>
         <button class="testNew btn btn-secondary btn-sm" data-id="{{id}}">Devour Now!</button>
       </form>
       </li>
       {{/unless}}
       {{/each}}
       </ul>
  </div>
  <div class="col-4">

         <ul>
         {{#each burgers}}
         {{#if this.devoured }}
         <li> {{this.id}}. {{this.burger_name}}</li>
         {{/if}}
         {{/each}}
       </ul>
       </div>
</div>

     
 


  </div>
   </div>
  </div>

  </div>
</div>
</div>

