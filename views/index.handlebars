<div class="container" id="main">
  <div id="wrapper">
  <div class="container" id="background">

<div class="header">
  
  <img src="/assets/img/burger-188.jpg" class="float-right">
  <h1 class="display-1"><strong></strong>Order A Burger</strong></h1>
</div>


<div class="content">

  <div class="row mt-5">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="card mb-4 mt-5 bg-transparent style='border-style: none;'">
      <div class="card-body text-center my-1">
        <div class="text-color">
        <h4 class="card-title text-center my-4">Place an order for your Burger below.</h4></div>
        <p class="card-text">
          <form class="create-form">
            <div class="form-group">
              <label for="ca">Burger Name:</label>
              <input type="text" id="ca" name="name"><br/><br/>
              <label for="devour"></label>
              <input type="hidden" id="devour" name="devoured" value="0">
              <button type="submit" class="btn btn-success text-center">Order Burger</button>  
            </div>
          </form>
        </p>
      </div>
    </div>
    </div>   
    <div class="col-2"></div>   
  </div>  

  <div class="row">
    <div class="col-1">      
    </div>
    
    <div class="col-5 my-3 pl-5 avail-col">
      <h4 class="p-4 mr-5 mt-5 mb-4 text-center">Available Burgers</h4>
    <ul>
    {{#each burgers}}
     {{#unless this.devoured}}
     <div class="col-xs-9">
      <li> {{this.id}}. {{this.burger_name}}

       <form class="nothing ">
         <input type="hidden" name="burger_id" type="text" value={{this.id}}>
         <button class="testNew btn btn-secondary btn-sm m-1" data-id="{{id}}">Devour Now!</button>
       </form>
       </li>
       {{/unless}}
       {{/each}}
       </ul>
  </div>
  <div class="col-5 my-3 devour-col">
    <h4 class="px-4 pt-4 pb-4 mr-5 mt-5 mb-4 text-center">Devoured Burgers </h4>

         <ul>
         {{#each burgers}}
         {{#if this.devoured }}
         <li> {{this.id}}. {{this.burger_name}}</li>
         {{/if}}
         {{/each}}
       </ul>
       </div>
</div>

     
 


  </div>
   </div>
  </div>

  </div>
</div>
</div>

